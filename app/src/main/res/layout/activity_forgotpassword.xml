<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ForgotPasswordActivity">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/ivForgotLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_uninav_logo"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="App Logo" />

    <!-- App Name -->
    <TextView
        android:id="@+id/tvForgotAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNINAV"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivForgotLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Forgot Password Title -->
    <TextView
        android:id="@+id/tvForgotTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvForgotAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mail Address Hint -->
    <TextView
        android:id="@+id/tvMailAddressHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mail Address Here"
        android:textSize="16sp"
        android:textColor="#2C3E50"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvForgotTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description Text -->
    <TextView
        android:id="@+id/tvForgotDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enter the email address Associated\nwith your account."
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvMailAddressHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilForgotEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="30dp"
        android:hint="Email"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="#666666"
        app:hintTextColor="#666666"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="#E8E8E8"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvForgotDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etForgotEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="#2C3E50"
            android:textColorHint="#888888"
            android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSendReset"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#4A2F8B"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tilForgotEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBarForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="#4A2F8B"
        app:layout_constraintTop_toBottomOf="@id/btnSendReset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

