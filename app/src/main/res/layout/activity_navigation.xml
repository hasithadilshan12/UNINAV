<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationActivity">

    <!-- Google Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Navigation Control and Info Card -->
    <LinearLayout
        android:id="@+id/navigationInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/card_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNextInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next: Go straight ahead"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRemainingDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Remaining: 0.0 km"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnEndNavigation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_background"
            android:text="End Navigation"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!--Re-center Button -->
    <ImageView
        android:id="@+id/btnReCenter"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/navigationInfoCard"
        android:layout_marginBottom="-70dp"
        android:background="@drawable/fab_background"
        android:src="@drawable/ic_my_location"
        android:elevation="8dp"
        app:tint="#1565C0"
        android:contentDescription="Re-center map on current location"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:visibility="gone"/>

</RelativeLayout>