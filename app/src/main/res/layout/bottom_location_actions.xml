<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomActionPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="24dp"
    android:elevation="8dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Location Name Text View -->
    <TextView
        android:id="@+id/tvPanelLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:text="Location Name" />

    <!-- Location Description Text View -->
    <TextView
        android:id="@+id/tvPanelLocationDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp"
        android:text="Location Description" />

    <!-- Location Image View -->
    <ImageView
        android:id="@+id/locationImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="location_image"
        android:src="@drawable/ic_image_placeholder"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Action Buttons Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- Directions Button -->
        <Button
            android:id="@+id/btnPanelDirections"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Directions"
            android:textSize="16sp"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <!-- Start Navigation Button -->
        <Button
            android:id="@+id/btnPanelStartNav"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Start"
            android:textSize="16sp"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
